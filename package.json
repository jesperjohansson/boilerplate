{
  "name": "@strt/boilerplate",
  "version": "1.0.0",
  "description": "The Strateg front end boilerplate.",
  "private": false,
  "license": "MIT",
  "author": "Strateg Marknadsf√∂ring <development@strateg.se> (http://strateg.se)",
  "bricks": {
    "output": "public/dist",
    "scripts": {
      "publicPath": "/dist/scripts"
    },
    "serve": {
      "server": "public"
    }
  },
  "scripts": {
    "dev": "bricks",
    "build": "bricks build",
    "test": "npm run lint:scripts && npm run lint:styles",
    "deploy": "npm run docker:build && npm run docker:push",
    "lint:scripts": "eslint src --ext .js --fix",
    "lint:styles": "stylelint \"src/**/*.scss\" --fix",
    "docker:build": "docker build -t strt/YOUR_REGISTRY .",
    "docker:push": "docker push strt/YOUR_REGISTRY",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "core-js": "^2.4.1",
    "js-polyfills": "^0.1.33",
    "reset-css": "^2.2.0",
    "svgxuse": "^1.2.4"
  },
  "devDependencies": {
    "@strt/bricks": "^1.2.0",
    "babel-eslint": "^7.2.3",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.1.0",
    "husky": "^0.14.2",
    "lint-staged": "^4.0.0",
    "postcss": "^6.0.4",
    "stylelint": "^7.11.1",
    "stylelint-config-strateg": "^1.2.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-strateg"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
      "browser": true
    }
  }
}
