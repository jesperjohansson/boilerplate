{
  "name": "@strt/boilerplate",
  "version": "1.0.0",
  "description": "Lightweight and customizable front end boilerplate",
  "license": "MIT",
  "author": "Strateg Marknadsf√∂ring <development@strateg.se> (http://strateg.se)",
  "scripts": {
    "dev": "bricks",
    "build": "bricks build",
    "test": "npm run lint:scripts && npm run lint:styles",
    "lint:scripts": "eslint src --ext .js --fix; exit 0",
    "lint:styles": "stylelint \"src/**/*.scss\" --fix; exit 0",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "core-js": "^2.5.1",
    "js-polyfills": "^0.1.34",
    "reset-css": "^2.2.1",
    "svgxuse": "^1.2.4"
  },
  "devDependencies": {
    "@strt/bricks": "^1.7.4",
    "babel-eslint": "^8.0.0",
    "eslint": "^4.6.1",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-plugin-import": "^2.7.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.1.3",
    "postcss": "^6.0.11",
    "stylelint": "^8.1.1",
    "stylelint-config-strateg": "^1.3.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-strateg"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "parser": "babel-eslint",
    "env": {
      "browser": true
    }
  }
}
