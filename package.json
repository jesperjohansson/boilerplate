{
  "name": "@strt/boilerplate",
  "version": "1.0.0",
  "description": "Lightweight front-end boilerplate",
  "license": "MIT",
  "author": "Strateg Marknadsf√∂ring <development@strateg.se> (http://strateg.se)",
  "scripts": {
    "dev": "bricks",
    "build": "bricks build",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:scripts": "eslint src --ext .js --fix; exit 0",
    "lint:styles": "stylelint \"src/**/*.scss\" --fix; exit 0",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "core-js": "^2.5.4",
    "js-polyfills": "^0.1.42",
    "reset-css": "^3.0.0",
    "svgxuse": "^1.2.6",
    "tiny-emitter": "^2.0.2"
  },
  "devDependencies": {
    "@strt/bricks": "^1.13.1",
    "babel-eslint": "^8.2.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "postcss": "^6.0.21",
    "prettier": "^1.11.1",
    "stylelint": "^9.1.3",
    "stylelint-config-strateg": "^1.7.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-strateg"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "plugins": [
      "prettier"
    ],
    "parser": "babel-eslint",
    "env": {
      "browser": true
    }
  }
}
