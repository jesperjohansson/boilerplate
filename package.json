{
  "name": "@strt/boilerplate",
  "version": "1.0.0",
  "description": "Lightweight front-end boilerplate",
  "license": "MIT",
  "author": "Strateg Marknadsf√∂ring <development@strateg.se> (http://strateg.se)",
  "scripts": {
    "dev": "bricks",
    "build": "bricks build",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:scripts": "eslint src --ext .js --fix; exit 0",
    "lint:styles": "stylelint \"src/**/*.scss\" --fix; exit 0",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "core-js": "^2.5.5",
    "js-polyfills": "^0.1.42",
    "reset-css": "^3.0.0",
    "svgxuse": "^1.2.6",
    "tiny-emitter": "^2.0.2"
  },
  "devDependencies": {
    "@strt/bricks": "^2.0.0",
    "eslint": "^5.4.0",
    "eslint-config-strateg": "^1.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.4",
    "postcss": "^7.0.0",
    "prettier": "^1.12.1",
    "stylelint": "^9.2.0",
    "stylelint-config-strateg": "^1.7.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-strateg"
  },
  "eslintConfig": {
    "extends": "strateg"
  }
}
