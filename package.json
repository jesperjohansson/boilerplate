{
  "name": "@strt/boilerplate",
  "version": "1.0.0",
  "description": "Lightweight front-end boilerplate",
  "license": "MIT",
  "author": "Strateg Marknadsf√∂ring <development@strateg.se> (http://strateg.se)",
  "scripts": {
    "dev": "bricks",
    "build": "bricks build",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:scripts": "eslint src --ext .js --fix; exit 0",
    "lint:styles": "stylelint \"src/**/*.scss\" --fix; exit 0",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "core-js": "^2.5.1",
    "js-polyfills": "^0.1.41",
    "reset-css": "^2.2.1",
    "svgxuse": "^1.2.6"
  },
  "devDependencies": {
    "@strt/bricks": "^1.12.1",
    "babel-eslint": "^8.0.2",
    "eslint": "^4.12.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.3.1",
    "husky": "^0.14.3",
    "lint-staged": "^5.0.0",
    "postcss": "^6.0.14",
    "prettier": "^1.9.1",
    "stylelint": "^8.3.1",
    "stylelint-config-strateg": "^1.5.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-strateg"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "plugins": ["prettier"],
    "parser": "babel-eslint",
    "env": {
      "browser": true
    }
  }
}
